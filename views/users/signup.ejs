<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
	<h1 class="col-6 offset-3">SignUp On Wanderlust</h1>
	<div class="col-6 offset-3">
		<form action="/signup" method="POST" novalidate class="needs-validation">
			<div class="mb-3">
				<label for="username" class="form-label">Username</label>
				<input
					type="text"
					name="username"
					id="username"
					class="form-control"
					required
				/>
				<div class="valid-feedback">Username Looks Good!</div>
			</div>
			<div class="mb-3">
				<label for="email" class="form-label">Email</label>
				<input
					type="email"
					name="email"
					id="email"
					class="form-control"
					required
				/>
				<div class="valid-feedback">Email Looks Good!</div>
			</div>
			<div class="mb-3">
				<label for="password" class="form-label">Password</label>
				<input
					type="password"
					name="password"
					id="password"
					class="form-control"
					required
				/>
				<div class="valid-feedback">Password Looks Good!</div>
			</div>
			<button type="submit" class="btn btn-primary">SignUp</button>
		</form>
	</div>
</div>
